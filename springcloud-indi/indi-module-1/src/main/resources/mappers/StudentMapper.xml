<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.repo.springboot.mapper.StudentDao">

    <select id="selectAll" resultType="indi.repo.springboot.entity.Student">
     SELECT
        *
     from
     student
    </select>

    <insert id="insertBatchTest" parameterType="list">
        insert into student (username,sex) values
        <foreach collection="list" item="item" separator=",">
            (#{item.username},#{item.sex})
        </foreach>
    </insert>


    <select id="selectByIdCustom" parameterType="long" resultType="indi.repo.springboot.entity.Student">
        select * from student where  id = #{id}
    </select>

</mapper>